<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_content_manager_form" model="ir.ui.view">
        <field name="name">article.article.form</field>
        <field name="model">article.article</field>
        <field name="arch" type="xml">
            <form string="Articles">
                <header>
                    <button name="action_reading" string="Reading" states="open" class="oe_highlight" type="object"/>
                    <button name="action_read" string="Read" states="reading" class="oe_highlight" type="object"/>
                    <button name="action_abandoned" string="Abandon" states="open,reading" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="author" required="1" readonly="1"/>
                            <field name="assigned_to" required="1"/>
                            <field name="publish_date" required="1"/>
                            <field name="start_date" readonly="1" force_save="1"/>
                            <field name="content" required="1"/>
                        </group>
                        <group>
                            <field name="title" required="1"/>
                            <field name="deadline" required="1"/>
                            <field name="finished_date" readonly="1" force_save="1"/>
                            <field name="image" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_content_manager_tree" model="ir.ui.view">
        <field name="name">article.article.tree</field>
        <field name="model">article.article</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title" />
                <field name="author"/>
                <field name="publish_date"/>
                <field name="deadline"/>
                <field name="assigned_to"/>
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="action_article_article" model="ir.actions.act_window">
        <field name="name">Articles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">article.article</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem
        id="menu_article"
        name="Articles"
        action="content_manager.action_article_article"
        sequence="10"/>
</odoo>